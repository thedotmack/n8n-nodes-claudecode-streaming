{
  "name": "@thedotmack/n8n-nodes-claudecode-streaming",
  "version": "0.1.1",
  "description": "n8n node for Claude Code SDK integration with MCP support and Slack streaming",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "claude",
    "claude-code",
    "ai",
    "anthropic",
    "mcp",
    "model-context-protocol"
  ],
  "license": "MIT",
  "homepage": "https://github.com/holt-web-ai/n8n-nodes-claudecode#readme",
  "bugs": {
    "url": "https://github.com/holt-web-ai/n8n-nodes-claudecode/issues"
  },
  "author": {
    "name": "Adam Holt",
    "email": "adam@holtweb.co.nz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/holt-web-ai/n8n-nodes-claudecode.git"
  },
  "engines": {
    "node": ">=20.15"
  },
  "main": "index.js",
  "scripts": {
    "build": "bunx rimraf dist && bun run tsc && bun run gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes --write",
    "lint": "eslint nodes package.json",
    "lintfix": "eslint nodes package.json --fix",
    "prepublishOnly": "bun run build && bun run lint -c .eslintrc.prepublish.js nodes package.json"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "nodes": [
      "dist/nodes/ClaudeCode/ClaudeCodeStreaming.node.js"
    ]
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "latest",
    "md-to-slack": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@typescript-eslint/parser": "~8.32.0",
    "eslint": "^8.57.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.3",
    "gulp": "^5.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}